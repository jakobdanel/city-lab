    <div id="contentFrame" class="d-flex justify-content-center flex-wrap p-5">
      <div id="textContent" class=" col col-12 rounded text-center">
        <h3>Create a new Task</h3>
        <form action="/taskManager/create" method="post" role="form">
          <div class="form-group">
            <label for="taskName">Name *</label>
            <input type="text" class="form-control form-control-lg mb-3" name="taskName" id="taskName" required
              placeholder="Name of your task" />
          </div>
          <div class="form-group">
            <label for="taskType">What is this task about *</label>
            <select class="form-control form-control-lg mb-3" name="taskType" id="taskType" onchange="javascript:fillTaskSubject(this.value)">
              <option value="Plant">Plants</option>
              <option value="Object">Objects</option>
              <option value="Process">Processes</option>
            </select>
          </div>
          <div class="form-group">
            <label for="taskElement">Which element should the task cover *</label>
            <select class="form-control form-control-lg mb-3" name="taskElement" id="taskElement">
            </select>
          </div>
          <div class="form-group">
            <label for="creator">Creator *</label>
            <input type="text" class="form-control form-control-lg mb-3" name="creator" id="creator"
              placeholder="Who created this task" readonly="true"/>
          </div>
          <div class="form-group">
            <label for="details">Details *</label>
            <input type="text" class="form-control form-control-lg mb-3" name="details" id="details"
              placeholder="Further Details about the task" />
          </div>
          <div class="form-group">
            <label for="until">Until *</label>
            <input type="date" class="form-control form-control-lg mb-3" name="until" id="until" />
          </div>
          <div class="form-group">
            <label for="assignedTo">Assignee *</label>
            <select class="form-control form-control-lg mb-3" name="assignedTo" id="assignedTo">
              <option selected>Who is supposed to do this task</option>
            </select>
          </div>
          <p>Elements marked with * are mandatory for a successfull creation</p>
          <button type="submit" class="btn btn-dark mb-5" name="action">Submit</button>
        </form>
        <script src="javascript/taskFormFunctions.js"></script>
